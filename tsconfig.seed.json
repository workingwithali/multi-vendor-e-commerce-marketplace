{
    "compilerOptions": {
        "baseUrl": ".", // ðŸ‘ˆ Required for path alias to work
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@payload-config": [
                "src/payload.config.ts"
            ]
        }
    },
    "include": [
        "src"
    ]
}